<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
</head>
<body style="padding:10px; width:60%; margin-left:150px; background-image: url('/Content/images/home-banner-bg.png'), url('/Content/images/video-area-bg.png'); background-repeat:no-repeat, no-repeat;background-size: 100% 500px, 100% 500px; background-position: inherit, bottom" >


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="panel panel-default shadow p-3 mb-5 bg-white rounded" style="padding: 10px; padding-left:40px; margin-top:30px;">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>


        <footer style="background-image: url('/Content/images/video-area-bg.png'); margin-bottom:10px; margin-left:0px; margin-right:0px;"></footer>
    
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
