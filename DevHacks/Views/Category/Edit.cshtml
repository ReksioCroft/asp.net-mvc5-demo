@model DevHacks.Models.Category
@{
    ViewBag.Title = "Edit";
}

<div class="panel panel-primary">
    <div class="panel-heading">Edit</div>
    <div class="panel-body">
        <div class="panel panel-default " style="padding:10px">
            @using (Html.BeginForm(actionName: "Edit", controllerName: "Category"))
            {
                @Html.HttpMethodOverride(HttpVerbs.Put)
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                @Html.Hidden("CategoryId")

                @Html.Label("CategoryName", "Nume Categorie")
                <br/>
                @Html.Editor("CategoryName")
                @Html.ValidationMessageFor(m => m.CategoryName, null, new { @class = "text-danger" })

                <br /><br/>
                <button type="submit">Modifica categorie</button>
            }
        </div>
    </div>
</div>